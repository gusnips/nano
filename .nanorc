set nowrap
set tabsize 2
set tabstospaces
set multibuffer
set autoindent
unset morespace
set constantshow
set justifytrim
set locking

set backup
set backupdir "~/.nano/backup/"
set historylog

# Set the opening and closing brackets that can be found by bracket searches.
set matchbrackets string "(<[{)>]}"
#set brackets string ""')>]}"
set casesensitive
set const
unset mouse
unset nonewlines
unset regexp
unset cut
unset backwards


## cut/copy/paste
bind ^X cut          main
bind ^C copytext     main
bind ^V uncut        main

## undo/redo (still experimental/buggy on nano 2.2.x)
# set undo
bind ^Z undo         all
bind ^Y redo         all

## find/replace (shift+F3 still missing)
bind ^F whereis      main
bind ^H replace      main
bind ^L gotoline     main
bind ^G searchagain  main
bind F3 searchagain  main

bind M-Q findprevious main
bind M-W findnext main  

## save/quit/help (requires to ignore XON/XOFF keys)
unset preserve
bind ^S savefile     all
bind ^O writeout     all
bind ^Q exit         all
bind M-Z suspend     main



